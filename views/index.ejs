<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/styles/style.css">
    <title>Document</title>
</head>
<body>
  <nav id="navbar" class="navbar bg-body-tertiary">
    <div class="container-fluid">
      <a class="navbar-brand">Swiss Trains</a>
    </div>
  </nav>     
      </nav>
      <div class="container">
        <div class="row mt-5 justify-content-center">
            <div class="col-lg-6">
                <h1>Trains for Switzerland</h1>
            </div>
        </div>
      </div>
      <%if(locals.from && locals.to && locals.time){%>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6">
                    <form class="form-inline" action="/" method="post">
                        <div class="form-group">
                          <label for="from">From</label>
                          <input type="text" class="form-control" name="from" id="text" value="<%=from%>">
                          <label for="to">To</label>
                          <input type="text" class="form-control" name="to" id="text" value="<%=to%>">
                          <label for="date">Date</label>
                          <input type="text" class="form-control" name="date" id="text" value="<%=time%>">
                        </div>
                        <div id="submit-button">
                            <button type="submit" class="btn btn-danger">Submit</button>
                        </div>
                      </form>
                </div>
            </div>
          </div>
        <% }else{ %>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-6">
                        <form class="form-inline" action="/" method="post">
                            <div class="form-group">
                              <label for="from">From</label>
                              <input type="text" class="form-control" name="from" id="text">
                              <label for="to">To</label>
                              <input type="text" class="form-control" name="to" id="text">
                              <label for="date">Date</label>
                              <input type="datetime-local" class="form-control" name="date" id="text">
                            </div>
                            <div id="submit-button">
                                <button type="submit" class="btn btn-danger">Submit</button>
                            </div>
                          </form>
                    </div>
                </div>
              </div>
            <% } %>
      <%if(locals.data){%>
      <div class="container justify-content-center">
        <div class="row">
          <div class="table-responsive" id="result">
            <table class="table">
              <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">From</th>
                  <th scope="col">To</th>
                  <th scope="col">Departure Date</th>
                  <th scope="col">Arrival Date</th>
                  <% if(data.connections[0].from.platform){ %>
                  <th scope="col">Platform</th>
                  <%}%>
                </tr>
              </thead>
             <%for(let i = 0; i < data.connections.length; i++){  %>
              <% let progressive = i+1 %>
              <tbody>
                <tr>
                  <td><%=progressive %></td>              
                  <td><%=data.connections[i].from.station.name %></td>
                  <td><%=data.connections[i].to.station.name %></td>
                  <td><%=data.connections[i].from.departure %></td> 
                  <td><%=data.connections[i].to.arrival %></td>
                  <td><%=data.connections[i].from.platform %></td>                        
                </tr>
                <% } %>
              </tbody>         
            </table>
             <form action="/clear-fields" method="post">
              <button type="submit" class="btn btn-secondary">Clear</button>
            </form>
          </div>       
        </div>
      </div>  
      <% } %>
    
      <%if (locals.error) {%>
        <div id="tag-error" class="tag-error">
          <%=error%>
        </div>
        <%}%>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
        <script src="/scripts/script.js" charset="UTF-8"></script>   
</body>
</html>